<odoo>
    <record id="report_point_of_sale" model="ir.actions.report">
        <field name="name">POS Report</field>
        <field name="model">custom_session</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="point_of_sale.model_pos_session"/>
        <field name="binding_type">report</field>
        <field name="report_name">pos_custom.report_pos_session_template</field>
    </record>

    <template id="report_pos_session_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="session">
                    <h1>POS Report</h1>
                    <style>
                        table {
                            width: 100%;
                            border: 1px solid #b3adad;
                            border-collapse: collapse;
                            padding: 5px;
                        }
                        table th {
                            border: 1px solid #b3adad;
                            padding: 5px;
                            background: #f0f0f0;
                            color: #313030;
                        }
                        table td {
                            border: 1px solid #b3adad;
                            text-align: center;
                            padding: 5px;
                            background: #ffffff;
                            color: #313030;
                        }
                    </style>
                    <!-- Table 1 -->
                    <table>
                        <thead>
                            <tr>
                                <th>Order</th>
                                <th>Product Category</th>
                                <th>Product</th>
                                <th>Code</th>
                                <th>Quantity</th>
                                <th>Price Unit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="session.order_ids" t-as="order">
                                <td t-esc="order.name"/>
                                <td t-esc="order.product_id.categ_id.name"/>
                                <td t-esc="order.product_id.name"/>
                                <td t-esc="order.product_id.default_code"/>
                                <td t-esc="order.product_uom_qty"/>
                                <td t-esc="order.price_unit"/>
                            </tr>
                        </tbody>
                    </table>
                    <br/>
                    <!-- Table 2 -->
                    <table>
                        <thead>
                            <tr>
                                <th>Payment Method</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="session.payment_ids" t-as="payment">
                                <td t-esc="payment.payment_method_id.name"/>
                                <td t-esc="payment.amount"/>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>
